{% extends 'base.html.twig' %}

{% block title %}Hello FlashcardController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    
    {% set query = app.request.get('query') %}

    <form method="get">
        <input value="{{ query }}" name="query" type="search">
        <button>Search</button>
    </form>

    <form action="">
        <div class="selection-grid">

            <div class="image-field">
                <label for="{{ unique_id }}">
                    <input id="{{ unique_id }}" class="img-radio-btn" name="selected-image" value="{{ image.id }}" type="radio">
                    <img class="img" src="{{ image.url }}" alt="{{ image.alt }}">
                </label>
            </div>
        </div>
            {% for image in images %}

                {% set unique_id = 'selected-image-' ~ loop.index %}


                <input type="hidden" value="{{ query }}">
                {# <input type="hidden" value="{{csrf_token("")}}"> #}

            {% endfor %}
            <button>Submit</button>
        </div>
    </form>


    {# {% for gif in gifs %}
        <div class="image-container">
            <img src="{{ gif.url }}" alt="{{ gif.alt }}">
        </div>
    {% endfor %} #}



</div>
{% endblock %}
