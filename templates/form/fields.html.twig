{% block flashcard_hidden_row %}
    <div class="back-wrapper">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form, { 'attr': {'class': 'sr-only'} }) }}
    </div>
{% endblock flashcard_hidden_row %}

{% block form_errors %}
  {%- if errors|length > 0 -%}
    <ul class="errors">
      {%- for error in errors -%}
        <li class="error-message">{{ error.message }}</li>
      {%- endfor -%}
    </ul>
  {%- endif -%}
{% endblock form_errors %}