{% extends 'base.html.twig' %}

{% block title %}Deck details{% endblock %}

{% block body %}


    <div class="flashcard-details | flow">
      
        <h1>Deck name: {{deck.name}}</h1>
            
    

        <a href="{{ path('app_deck_practice', {id: deck.id}) }}">Practice deck</a>
        {% if deckResultSummary.hasCorrect %}
            <a href="{{ path('app_deck_practice', {
                id: deck.id, 
                flashcardResult: enum('App\\Enum\\FlashcardResult').CORRECT.value })
                 }}"
                >Practice Correct part
            </a>
        {% endif %}

        {% if deckResultSummary.hasIncorrect %}
            <a href="{{ path('app_deck_practice', {
                id: deck.id, 
                flashcardResult: enum('App\\Enum\\FlashcardResult').INCORRECT.value })
                 }}">Practice Incorrect part</a>
        {% endif %}

        {% if deckResultSummary.hasUnanswered %}
            <a href="{{ path('app_deck_practice', {
                id: deck.id, 
                flashcardResult: enum('App\\Enum\\FlashcardResult').UNANSWERED.value })
                 }}">Practice Unanswered part
            </a>
        {% endif %}
        
     
        {% for flashcard in flashcards %}
            <div class="flashcard {{ flashcard.result.value }}">
                <h1>{{ flashcard.front }}</h1>
                <img src="{{ flashcard.back }}" alt="{{ flashcard.front }}">
            </div>
        {% endfor %}
    </div>

    
{% endblock %}